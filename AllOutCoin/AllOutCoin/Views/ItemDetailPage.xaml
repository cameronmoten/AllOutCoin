<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AllOutCoin.Views.ItemDetailPage"
             Title="{Binding Title}"  xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms" >
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Text:" FontSize="Medium" />
        <Label Text="{Binding Item.Text}" FontSize="Small"/>
        <Label Text="Description:" FontSize="Medium" />
        <Label Text="{Binding Item.Description}" FontSize="Small"/>
        <microcharts:ChartView x:Name="chartView" BackgroundColor="Transparent"  />

    </StackLayout>
</ContentPage>